<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/weightLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WEIGHT (g)"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/weightText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0,0"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doseLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOSE (g)"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/doseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0,0"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/flowRateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FLOWRATE (g/s)"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/flowRateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0,0"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIME"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00.0"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/brewRatioLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BREW RATIO"
                    android:textAlignment="center"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>

                <TextView
                    android:id="@+id/brewRatioText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1:0,0"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    app:autoSizeTextType="uniform"
                    android:justificationMode="inter_word"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/chartWeightView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/chartFlowRateView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/switchesFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <LinearLayout
                android:id="@+id/switchesLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/autoTareSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:hapticFeedbackEnabled="true"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:showText="false"
                    android:splitTrack="false"
                    android:text="@string/switch_tare_text"
                    android:textSize="20sp"
                    app:autoSizeTextType="uniform"
                    app:switchPadding="8dp"
                    tools:checked="false" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/autoDoseSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:hapticFeedbackEnabled="true"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:showText="false"
                    android:splitTrack="false"
                    android:text="@string/switch_dose_text"
                    android:textSize="20sp"
                    app:autoSizeTextType="uniform"
                    app:switchPadding="8dp"
                    tools:checked="false" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/autoStartSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:hapticFeedbackEnabled="true"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="1"
                    android:minHeight="48dp"
                    android:showText="false"
                    android:splitTrack="false"
                    android:text="@string/switch_autostart_text"
                    android:textSize="20sp"
                    app:autoSizeTextType="uniform"
                    app:switchPadding="8dp"
                    tools:checked="false" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/doseButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hapticFeedbackEnabled="true"
                android:justificationMode="inter_word"
                android:maxLines="1"
                android:text="DOSE"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/scanButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hapticFeedbackEnabled="true"
                android:justificationMode="inter_word"
                android:maxLines="1"
                android:text="CONNECT"
                app:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:enabled="false"
                android:hapticFeedbackEnabled="true"
                android:justificationMode="inter_word"
                android:maxLines="1"
                android:text="RESET"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>