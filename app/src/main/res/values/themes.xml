<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FutulaCoffeeScale" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="BackgroundListStyle">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="FabButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foregroundTint">@color/black</item>
    </style>

    <style name="Theme.FutulaCoffeeScale.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FutulaCoffeeScale.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FutulaCoffeeScale.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>